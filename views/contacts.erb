<h2>There are <%= @contacts.count %> contacts</h2>

<section id="contact-section" class="contacts">
  <% @contacts.each do |contact| %>
    <ul class="people">
      <li><a href="/contacts/<%=contact.id%>"><%= contact.full_name %> </a></li>
      <li class="modify"><a href="/contacts/<%=contact.id%>/edit">Edit</a></li>
      <li class="modify">|</li>
      <li class="modify"><a href="#">Delete</a></li>
    </ul>
  <% end %>
</section>
